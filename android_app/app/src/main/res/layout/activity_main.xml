<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="@android:color/black">

        <!-- Logo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EGX"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#5AC53B"
            android:layout_marginEnd="24dp" />

        <!-- Search Bar -->
        <EditText
            android:id="@+id/searchBar"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Search stocks"
            android:textColorHint="#78858a"
            android:textColor="@android:color/white"
            android:paddingHorizontal="12dp"
            android:background="@drawable/search_background"
            android:inputType="text" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#31363a" />

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="20dp">

            <!-- Portfolio Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$114,656"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+$44.63 (+0.04%) Today"
                    android:textSize="14sp"
                    android:textColor="#78858a"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Stock Chart Placeholder -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:background="#1e2023"
                android:elevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="ðŸ“ˆ Chart Here"
                    android:textSize="18sp"
                    android:textColor="#78858a" />

            </FrameLayout>

            <!-- Timeline Buttons -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:divider="@drawable/divider"
                    android:showDividers="middle">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="1D"
                        android:textSize="12sp"
                        android:paddingHorizontal="12dp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/timeline_button" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="1W"
                        android:textSize="12sp"
                        android:paddingHorizontal="12dp"
                        android:textColor="#5AC53B"
                        android:background="@drawable/timeline_button_active"
                        android:layout_marginStart="8dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="3M"
                        android:textSize="12sp"
                        android:paddingHorizontal="12dp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/timeline_button"
                        android:layout_marginStart="8dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="1Y"
                        android:textSize="12sp"
                        android:paddingHorizontal="12dp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/timeline_button"
                        android:layout_marginStart="8dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="ALL"
                        android:textSize="12sp"
                        android:paddingHorizontal="12dp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/timeline_button"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </HorizontalScrollView>

            <!-- Buying Power Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="16dp"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="20dp"
                android:background="#1e2023"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buying Power"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_weight="0" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="$2,586.11"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <!-- My Portfolio Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Portfolio"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Portfolio Items -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1e2023"
                android:elevation="4dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Sample Stock Item -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:background="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AAPL"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5 shares"
                                android:textSize="12sp"
                                android:textColor="#78858a"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="end">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$785.50"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+2.45%"
                                android:textSize="12sp"
                                android:textColor="#5AC53B"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#31363a" />

                </LinearLayout>

            </FrameLayout>

            <!-- Watchlist Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Watchlist"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Watchlist Items -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1e2023"
                android:elevation="4dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- MSFT -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:background="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MSFT"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="end">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$380.25"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+1.82%"
                                android:textSize="12sp"
                                android:textColor="#5AC53B"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#31363a" />

                    <!-- GOOGL -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:background="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="GOOGL"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="end">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$141.80"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-0.95%"
                                android:textSize="12sp"
                                android:textColor="#FF0000"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#31363a" />

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
